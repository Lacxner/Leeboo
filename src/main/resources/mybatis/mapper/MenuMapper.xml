<mapper namespace="com.gzy.leeboo.mapper.MenuMapper" >
  <resultMap id="BaseMenuResultMap" type="com.gzy.leeboo.entity.Menu" >
    <id column="id" property="id"/>
    <result column="url" property="url"/>
    <result column="path" property="path"/>
    <result column="component" property="component"/>
    <result column="name" property="name"/>
    <result column="icon" property="icon"/>
    <result column="parentId" property="parentId"/>
    <result column="enabled" property="enabled"/>
    <association property="meta" javaType="com.gzy.leeboo.entity.Meta">
      <result column="keepAlive" property="keepAlive"/>
      <result column="requireAuth" property="requireAuth"/>
    </association>
  </resultMap>

  <resultMap id="AllMenuResultMap" type="com.gzy.leeboo.entity.Menu" extends="BaseMenuResultMap">
    <collection property="children" javaType="arrayList" ofType="com.gzy.leeboo.entity.Menu">
      <id column="id2" property="id"/>
      <result column="url2" property="url"/>
      <result column="path2" property="path"/>
      <result column="component2" property="component"/>
      <result column="name2" property="name"/>
      <result column="icon2" property="icon"/>
      <result column="parentId2" property="parentId"/>
      <result column="enabled2" property="enabled"/>
      <association property="meta" javaType="com.gzy.leeboo.entity.Meta">
        <result column="keepAlive2" property="keepAlive"/>
        <result column="requireAuth2" property="requireAuth"/>
      </association>
    </collection>
  </resultMap>

  <resultMap id="AllMenuWithRolesResultMap" type="com.gzy.leeboo.entity.Menu" extends="BaseMenuResultMap">
    <collection property="roles" javaType="arrayList" ofType="com.gzy.leeboo.entity.Role">
      <id column="rId" property="id"/>
      <result column="rName" property="name"/>
      <result column="nameZh" property="nameZh"/>
      <result column="createTime" property="createTime"/>
    </collection>
  </resultMap>

  <resultMap id="BaseBasicMenuResultMap" type="com.gzy.leeboo.dto.BasicMenu">
    <id column="id" property="id"/>
    <result column="name" property="name"/>
    <collection property="children" javaType="arrayList" ofType="com.gzy.leeboo.dto.BasicMenu">
      <id column="id2" property="id"/>
      <result column="name2" property="name"/>
    </collection>
  </resultMap>

  <!-- 获取所有菜单以及其对应的角色 -->
  <select id="getAllMenuWithRoles" resultMap="AllMenuWithRolesResultMap">
    SELECT
      menu.*,
      role.`id` AS rId,
      role.`name` AS rName,
      role.`nameZh`,
      role.`createTime`
    FROM
      menu,
      menu_role,
      role
    WHERE
        menu.`id` = menu_role.`mId`
      AND
        role.`id` = menu_role.`rId`
  </select>

  <!-- 根据Hr的id获取其拥有的所有权限菜单 -->
  <select id="getAllMenuByHrId" parameterType="integer" resultMap="AllMenuResultMap">
    SELECT DISTINCT
        m1.*,
        m2.`id` AS id2,
        m2.`url` AS url2,
        m2.`path` AS path2,
        m2.`component` AS component2,
        m2.`name` AS name2,
        m2.`icon` AS icon2,
        m2.`keepAlive` AS keepAlive2,
        m2.`requireAuth` AS requireAuth2,
        m2.`enabled` AS enabled2
    FROM
        menu AS m1,
        menu AS m2,
        hr_role,
        menu_role
    WHERE
            m1.`id` = m2.`parentId`
        AND
            hr_role.`rId` = menu_role.`rId`
        AND
            menu_role.`mid` = m2.`id`
        AND
            m2.`enabled` = true
        AND
            hr_role.`hrId` = #{hrId}
  </select>

  <!-- 获取所有菜单的基础信息 -->
  <select id="getAllBasicMenu" resultMap="BaseBasicMenuResultMap">
    SELECT
      m1.`id`,
      m1.`name`,
      m2.`id` AS id2,
      m2.`name` AS name2
    FROM
      menu AS m1,
      menu AS m2,
      role
    WHERE
        m1.`parentId` = 1
      AND
        m2.`parentId` = m1.`id`
      AND
        m2.`enabled` = true
  </select>

  <!-- 根据角色id获取其拥有的所有菜单id -->
  <select id="getAllMenuIdsByRoleId" parameterType="integer" resultType="integer">
    SELECT
      menu.`id`
    FROM
      menu,
      menu_role,
      role
    WHERE
        menu_role.`mId` = menu.`id`
      AND
        menu_role.`rId` = role.`id`
      AND
        role.`id` = #{roleId}
  </select>

  <!-- 添加角色所有拥有的菜单 -->
  <insert id="addRoleMenu">
    INSERT INTO
    `menu_role`(`mId`, `rId`)
    VALUES
    <foreach collection="menuIds" item="menuId" separator=",">
      (#{menuId}, #{roleId})
    </foreach>
  </insert>

  <!-- 根据id删除该角色拥有的所有菜单 -->
  <delete id="deleteAllMenuByRoleId" parameterType="integer">
    DELETE FROM
        menu_role
    WHERE
        `rId` = #{id}
  </delete>

  <!-- 根据id批量删除角色拥有的所有菜单 -->
  <delete id="deleteBatchAllMenuByRoleIds" parameterType="list">
    DELETE FROM
        menu_role
    WHERE
        `rId` IN
    <foreach collection="list" item="roleId" open="(" separator="," close=")">
        #{roleId}
    </foreach>
  </delete>

